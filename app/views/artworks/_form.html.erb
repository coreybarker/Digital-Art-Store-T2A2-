<%= form_with(model: @artwork) do |f| %>
    <fieldset class="mb-2">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </fieldset>
    <fieldset class="mb-2">
        <%= f.label :artist %>
        <%= f.text_field :artist %>
    </fieldset>

    <fieldset class="mb-2">
        <%= f.label "$" %>
        <%= f.number_field :price, in: 1.0..10000.0, step: 0.5 %>
    </fieldset>

    <fieldset>
        <%= f.label :description %><br>
        <%= f.text_area :description, size: "70x5" %>
    </fieldset>

    <fieldset class="mb-2">
        <%= f.submit class: 'btn btn-success' %>
    </fieldset>
<% end %>