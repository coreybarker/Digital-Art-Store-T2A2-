<center>
    <div>
        <h1 style="color:#0a6955;"> <%= @artwork.title %> </h1> <h3 style="color:#0a6955;">By <%= @artwork.artist %> </h3>
    </div>

    <div>
        <%= cl_image_tag(@artwork.artwork_image.key, crop: :scale, width: 500, cloud_name: 'cozybaker') if @artwork.artwork_image.attached? %>
    </div>
    <h2 style="color:#0a6955;"> $<%= @artwork.price %> </h2>
</center>
    <div class="btn-toolbar">
        <%= link_to('Edit', edit_artwork_path(@artwork), class: 'btn btn-warning me-2') %>
        <%= button_to('Delete', @artwork, class: 'btn btn-danger', method: :delete, form: { data: {turbo_confirm: "Are you sure you want to delete '#{@artwork}'?" } }) %>
    </div>