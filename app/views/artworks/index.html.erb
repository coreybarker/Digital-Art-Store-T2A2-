

<h1 class="text-center" style="color:#0a6955;">All Artwork</h1>

<center>
  <div class="card-deck" style="display: flex;">
    <% @artworks.each do |artwork| %>
      <div class="card" style="width: 30rem; color:#0a6955; background:#bce8e6;">
        <div class="card-body">
          <h5 class="card-title"><%=artwork.title%></h5>
          <h5 class="card-title"> $<%=artwork.price%></h5>
          <span>
            <%= link_to('View', artwork, class: 'btn btn-outline-dark stretched-link') %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</center>