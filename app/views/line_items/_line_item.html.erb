<hr/>
<div class="columns align0items-center">
    <div class="column is-1">
        <%= line_item.quantity %>
    </div>
    <div class="column is-2">
        <figure class="is-128x128 image">
            <%# <%= cl_image_tag(@artwork.artwork_image.key, crop: :scale, width: 500, cloud_name: 'cozybaker') if @artwork.artwork_image.attached? %>

        </figure>
    </div>
    <div class="column is-9">
        <strong><%= line_item.artwork.title %></strong>
        <div class="columns align-items-center">
            <div class="content column is-9">
                <%= truncate(line_item.artwork.description, length: 140) %>
            </div>
            <div class="column is-3 has-text-right">
                <strong class="f4"><%= number_to_currency(line_item.total_price) %></strong>
            </div>
        </div>
    </div>
</div>

<div class="has-text-right">
    <%= button_to('Remove Item', line_item, class: 'btn btn-danger', method: :delete, form: { data: {turbo_confirm: "Are you sure you want to remove item?" } }) %>
</div>